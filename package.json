{
    "name": "template-ts-express",
    "version": "0.0.1",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "build": "rm -rf build && tsc -p tsconfig.json",
        "lint": "tsc --noEmit && eslint 'src/**/*.{js,ts}' --quiet --fix",
        "test": "jest",
        "start": "NODE_ENV=production node ./build/index.js",
        "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
        "prettier:base": "prettier --parser typescript --single-quote",
        "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
        "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
        "migration:run": "knex migrate:latest --knexfile=knexfile.ts --verbose",
        "migration:rollback": "knex migrate:rollback --knexfile=knexfile.ts --verbose",
        "make:migration": "knex migrate:make --knexfile=knexfile.ts -x ts"
    },
    "devDependencies": {
        "@types/cors": "^2.8.6",
        "@types/helmet": "^0.0.45",
        "@types/jest": "^25.2.1",
        "@types/morgan": "^1.9.0",
        "@types/node": "^13.13.1",
        "@types/swagger-jsdoc": "^3.0.2",
        "@types/swagger-ui-express": "^4.1.2",
        "@typescript-eslint/eslint-plugin": "^2.29.0",
        "@typescript-eslint/parser": "^2.29.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-jest": "^23.8.2",
        "eslint-plugin-prettier": "^3.1.3",
        "jest": "^25.4.0",
        "pino-pretty": "^4.0.0",
        "prettier": "^2.0.4",
        "ts-jest": "^25.4.0",
        "ts-node": "^8.9.0",
        "ts-node-dev": "^1.0.0-pre.44",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@types/express": "^4.17.6",
        "@types/express-pino-logger": "^4.0.2",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "csv-parse": "^4.8.9",
        "dotenv-safe": "^8.2.0",
        "express": "^4.17.1",
        "express-pino-logger": "^4.0.0",
        "helmet": "^3.22.0",
        "knex": "^0.21.0",
        "pg": "^8.0.2",
        "pino": "^6.2.0",
        "swagger-jsdoc": "^4.0.0",
        "swagger-ui-express": "^4.1.4"
    }
}
